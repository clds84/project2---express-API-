{% layout "layout.liquid" %}
{% block content %}
<body class="body">
    <div class="message-searchInput-container">
        <h1 class="message">Want to see more? Keep searching!</h1>
        <form class="meme-search-form" action="/memes/search" method="POST">
            <input class="meme-input-pageSearch" type="number" name="page" placeholder="Enter Page Number">
            <input class="searchInput-submit" id="meme-input-submit" type="submit" value="Search">
        </form>
    </div>
    <div class="info-container">
    {% for meme in memeData.data %}
        {% if meme.bottomText != null and meme.topText != null %}
            {% if meme.bottomText != '' or meme.topText != ''%}  
                <div class="meme-container">
                    <p class="topText">{{meme.topText}}</p>
                    <img class="img" width= 500px height= auto src="{{meme.image}}">
                    <p class="bottomText">{{meme.bottomText}}</p>
                    <form action="/memes/viewAll" method="POST">
                        <input type="hidden" name="bottomText" value={{meme.bottomText}}>
                        <input type="hidden" name="name" value={{meme.name}}>
                        <input type="hidden" name="ID" value={{meme.ID}}>
                        <input type="hidden" name="topText" value={{meme.topText}}>
                        <input type="hidden" name="image" value={{meme.image}}>
                        <input type="hidden" name="rank" value={{meme.rank}}>
                        <input type="hidden" name="tags" value={{meme.tags}}>
                        <input class="like" type="submit" value="like">
                    </form>
                    </img>
                </div>    
            {% endif %}
        {% endif %}
    {% endfor %}
</div>
</body>
{% endblock %}