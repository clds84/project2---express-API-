{% layout "layout.liquid" %}
{% block content %}
<head>
    <style>
        .info-container {
            display:flex;
            flex-direction:column;
            justify-content:flex-start;
            align-items:center;
            padding:var(--padding);
            height:1200px;
        }
        .edit-delete {
            display:flex;
            justify-content:space-between;
            width:200px;
            margin:var(--margin);
        }
        .meme-container {
            display:flex;
            flex-direction:column;
            align-items:center;
            position:relative;
            width:600px;
            height:600px;
            
        }
        .img {
            object-fit:cover;
            width:100%;
            height:100%;
            border-radius:var(--border-radius);
        }
        .topText { 
            position:absolute;
            top:0;
            font-size:30px;
            text-align:center;
            color: white;
            text-shadow: -1px 1px 4px #000,
	    		  2px 2px 4px #000,
	    		  2px -2px 2px #000,
	    		  -1px -1px 2px #000; }
        .bottomText {
            position:absolute;
            bottom:0;
            color: white;
            font-size:30px;
            text-align:center;
            text-shadow: 1px 1px 4px #000,
                        2px 2px 4px #000,
                        2px -2px 2px #000,
                        -1px -1px 2px #000; }
        .comments-form {
            width: 700px; 
            margin:var(--margin)   
        }
        ::placeholder {
           color:rgba(0,0,0,.3)
        }
        .post-comment {
            float:right;
            margin:calc(var(--margin) * .5);
        }
        .type-comment {
            width:100%;
        }
       
    </style>
</head>
<body class="body">
    <div class="info-container">
        
            {% if memes.owner == userId %}
            <div class="edit-delete">
            <form action="/memes/mine/{{memes.id}}/edit" method="get">
                <button id=>Edit</button>
            </form>
            <form  action="/memes/mine/{{memes.id}}/delete?_method=DELETE" method="POST">
                <input type="submit" value="Delete">
            </form>
            </div>
            {% endif %}
        

        <div class="meme-container">
            <img class="img" src="{{memes.image}}">
            <p class="topText">{{memes.topText}}</p>
            <p class="bottomText">{{memes.bottomText}}</p>
        </div>
        
             <form class="comments-form" action="/comments/{{memes.id}}" method="POST">
            <fieldset>
                <input type="text"  class="type-comment" name="note" placeholder="enter comment here...">
            </fieldset>
                <input type="submit" class="post-comment" value="Post">
            </form>
        
        {% if memes.comments.length > 0%}
            <div class="comments-container">
                {% for comment in memes.comments %}
                    {% render '../comment.liquid', username: username, comment: comment, memes: memes %}
                {% endfor %}
            </div>
        {% endif %}
    <div>
</body>
{% endblock %}