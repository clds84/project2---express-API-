<!-- we're serving block content in layout.liquid -->
<!-- so we need to inform all our blocks(files) -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">
    <script src="/app.js" defer></script>
</head>
<style>
    :root {
        --grid-gap:20px;
        --border-radius:20px;
    }
    .info-container {
        display:grid;
        grid-template-columns: repeat(2,1fr);
        grid-gap:var(--grid-gap);
        place-items:center;
        margin:40px;
    }
    .message {
        grid-column:1/-1;
    }
    .meme-container {
        position:relative;
        width:400px;
        height:400px;
        
    }
    .link {
      
    }
    .img {
        object-fit:cover;
        width:100%;
        height:100%;
        border-radius:var(--border-radius);
    }
    .topText { 
        position:absolute;
        top:0;
        width:500px;
        height:100px;
        align-items:flex-start;
        color: white;
	    font-size: 30px;
        text-shadow: -1px 1px 4px #000,
	    		  2px 2px 4px #000,
	    		  2px -2px 2px #000,
	    		  -1px -1px 2px #000; }
    .bottomText {
        position:absolute;
        bottom:0;
        right:50;
        width:500px;
        text-align:center;
        color: white;
	    font-size: 30px;
	    text-shadow: 1px 1px 4px #000,
	    			  2px 2px 4px #000,
	    			  2px -2px 2px #000,
	    			  -1px -1px 2px #000; }
</style>
{% layout 'layout.liquid' %}
<!-- here we start our block content -->
{% block content %}
<body class="body">
    <div class="info-container">
        <h1 class="message">View all memes here including ones you've created! You can click on any meme to comment and additionally you can edit or delete yours!</h1>
        {% for meme in memes %}
        <div class="meme-container">
            <a href="/memes/mine/{{meme.id}}" class="link">
                    <img class="img" src="{{meme.image}}">
                    <p class="topText">{{meme.topText}}</p>
                    <p class="bottomText">{{meme.bottomText}}</p>
                </a>  
            </div>
        {% endfor %}
    </div>
</body>

{% endblock %}
</html>